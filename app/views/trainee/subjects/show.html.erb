<div data-section="home">
    <div class="super_container">
      <div class="course">
        <div class="container">
          <div class="row">

                    <div class="course_title"><%= @current_subject.subject.name %></div>
                    <div class="course_info"><%= raw @current_subject.subject.instruction %> </div>
                  </div>
                </div>
              </div>
            </div>
 
  </div>
  <div class="colorlib-about" data-section="about">
    <div class="colorlib-narrow-content">
      <div class="row">
        <div class="col-md-12">
          <div class="row row-bottom-padded-sm animate-box" data-animate-effect="fadeInLeft">
            <div class="col-md-12">
              <div class="about-desc">
                <h2 class="colorlib-heading"><%= t(".list_default_task") %><%=@current_subject.subject.name%></h2>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <% @tasks_of_subject.each do |trainee_task| %>
      <button type="button" class="btn btn-primary btn-lg" data-toggle="modal" data-target="#myModal-<%= trainee_task.id%>">
        <%= trainee_task.course_subject_task.task.name %>
      </button>
      <div class="modal fade" id="myModal-<%= trainee_task.id %>" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header">
              <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
              <h1 class="modal-title" id="myModalLabel"><%= trainee_task.course_subject_task.task.name %></h1>
            </div>
            <div class="modal-body">
              <h3><%= trainee_task.course_subject_task.task.instruction %></h3>
              <% if trainee_task.course_subject_task.course_subject.pending? %>
              Status:
              <% if trainee_task.finish? %>
                <%= link_to trainee_task.status, trainee_course_subject_path(trainee_task.course_subject_task.course_subject.course_id, trainee_task.course_subject_task.task.subject_id, trainee_task.id),:method => :patch, class: "btn btn-primary" %>
              <% else %>
                <%= link_to trainee_task.status, trainee_course_subject_path(trainee_task.course_subject_task.course_subject.course_id, trainee_task.course_subject_task.task.subject_id, trainee_task.id),:method => :patch, class: "btn btn-danger" %>
              <% end %>
              <% end %>
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-primary" data-dismiss="modal">Close</button>
            </div>
          </div>
        </div>
      </div>
      <% @finish_tasks.each do |finish| %>
        <% if finish.id == trainee_task.id %>
          <i class="fa fa-check-circle" style="font-size:25px;color:green"></i>
        <% end %>
      <% end %>
    <% end %>
  </div>
  <script src="/assets/main.js"></script>
